{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Project",
            "windows": {
                "command": "node",
                "args": ["${workspaceFolder}/build.js"],
            },
            "linux": {
                "command": "node",
                "args": ["${workspaceFolder}/build.js"]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}