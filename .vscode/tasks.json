{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Compile Project",
			"command": "g++.exe",
			"args": [
				"-DUNICODE",
				"-std=c++17",
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}/src/main.cpp",
				"-o",
				"${workspaceFolder}/DeskBrew.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}/src"
			},
			"problemMatcher": ["$gcc"]
		}
	]
}
