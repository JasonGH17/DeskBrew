{
    "configurations": [
        {
            "name": "Win32",
            "includePath": [
                "${VULKAN_SDK}/Include",
                "${workspaceFolder}/src",
                "${workspaceFolder}/src/Engine/**"
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE",
                "VK_DEBUG",
                "DB_EXPORT",
                "VK_USE_PLATFORM_WIN32_KHR"
            ],
            "windowsSdkVersion": "10.0.19041.0",
            "cStandard": "c17",
            "cppStandard": "c++17",
            "intelliSenseMode": "windows-gcc-x64",
            "compilerPath": "${default}"
        },
        {
            "name": "Linux",
            "includePath": [
                "/usr/include",
                "${workspaceFolder}/src",
                "${workspaceFolder}/src/Engine/**",
                "${VULKAN_SDK}/include"
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE",
                "VK_DEBUG",
                "DB_EXPORT",
                "VK_USE_PLATFORM_XCB_KHR"
            ],
            "cStandard": "c17",
            "cppStandard": "c++17",
            "intelliSenseMode": "linux-gcc-x64",
            "compilerPath": "/usr/bin/g++"
        }
    ],
    "version": 4
}